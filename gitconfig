[user]
	name = 
	email = 

[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	lg = log -p
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
#	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	lola = log --graph --decorate --pretty=format:'%C(yellow)%h%Creset %s %C(red)(%an) %C(green)%ar' --abbrev-commit --all
	lobo = log --left-right --graph --cherry-pick --oneline HEAD...origin/master
	ls = ls-files
	com = commit -a -m
	del = add -u

[push]
	default = simple
